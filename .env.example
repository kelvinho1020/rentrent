# 資料庫設定
DB_HOST=db
DB_PORT=5432
DB_NAME=rentrent
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/rentrent

# API 設定
API_PREFIX=/api

# Mapbox API Key (需要從 Mapbox 官網註冊取得)
MAPBOX_API_KEY=YOUR_MAPBOX_API_KEY

# 爬蟲設定
SCRAPER_INTERVAL_HOURS=24
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"

# 前端設定
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_MAPBOX_API_KEY=YOUR_MAPBOX_API_KEY 
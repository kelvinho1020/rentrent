{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "strict": false,
    "paths": {
      "@/*": ["./src/*"],
      "@rentrent/shared": ["../../packages/shared/src"],
      "@rentrent/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["scripts/**/*", "src/**/*"],
  "references": [
    {
      "path": "../../packages/shared"
    }
  ]
} 